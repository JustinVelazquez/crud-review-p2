  <body>
    <h1>What coins do you want to track?</h1>
    <ul class="coins">
      <% for(let i = 0; i < coinInfo.length; i++) {%>
      <li class="coin">
        <span><%= coinInfo[i].name %></span>
        <span><%= coinInfo[i].price %></span>
        <span class="del">delete</span>
      </li>
      <% } %>
    </ul>

    <h2>Add A Coin:</h2>

    <form action="/addCoin" method="POST">
      <input type="text" placeholder="Coin Name" name="name" />
      <input type="text" placeholder="Coin Price" name="price" />
      <button type="submit">Add!</button>
    </form>

